<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
  <link rel='stylesheet' href='/stylesheets/bootstrap-grid.min.css' />
  <link rel='stylesheet' href='/stylesheets/bootstrap-reboot.min.css' />
  <link rel='stylesheet' href='/stylesheets/dataTables.bootstrap4.min.css' />
</head>

<body>
  <div class="form-group">
    <h1 class="text-center"><%= title %></h1>
  </div>

  <div class="form-group">
    <a href="/transactions/add" class="btn btn-sm btn-success">Add Transaction</a>
  </div>
  <table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
      <tr>
        <th>No</th>
        <th>Number</th>
        <th>Check In</th>
        <th>Check Out</th>
        <th>Total</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(function(d, i){ %>
      <tr>
        <td><%- i+1; %></td>
        <td><%- d.platnomor; %></td>
        <td><%- d.masuk; %></td>
        <td><%- d.keluar; %></td>
        <td><%- d.total; %></td>
        <td><a href="/transactions/out/<%- d.platnomor; %>/<%- d.id; %>" class="btn btn-sm btn-danger">Check Out</a>
        </td>
      </tr>

      <% }); %>
    </tbody>
  </table>

  <script src="/javascripts/jquery.min.js"></script>
  <script src="/javascripts/jquery.dataTables.min.js"></script>
  <script src="/javascripts/dataTables.bootstrap4.min.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>
  <script src="/javascripts/scripts.js"></script>
</body>

</html>